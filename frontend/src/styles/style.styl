/**
 * Sample Sift Stylus
 */
@import "@redsift/ui-rs-core/dist/css/ui-rs-core.min.css"

body, html {
  height: 100%;
}
.column {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2em;
}

.side-by-side {
  height: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.stat {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  padding: 1em;
}

.stat--separator {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  padding: 1em;
  border-right: 1px solid black;
}

.count {
  font-family: 'Source Code Pro';
  font-style: normal;
  font-weight: 300;
  font-size: 40px;
}

.subtitle {
  font-family: 'Source Code Pro';
  font-style: normal;
  font-weight: 300;
  font-size: 14px;
}

.info-steps {
  display: flex;
  flex-direction: column;
  margin-top: 2em;
}

.info-larger {
  margin-top: 1em;
  font-size: 18px;
  display: none;
}

@media screen and (max-width: 240px) {
  .stat {
    padding:0.4em;
  }
  .stat--separator {
    padding: 0.4em;
  }
  .count {
    font-size: 16px;
  }
  .subtitle {
    font-size: 11px;
  }
  .info-steps{
    display: none;
  }
  .info-larger {
    display: block;
  }
}
